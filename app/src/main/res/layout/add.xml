<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="40dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/add_producer_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Producer:"
                android:textSize="30sp" />

            <Space
                android:layout_width="37dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/add_producer_input"
                android:layout_width="225dp"
                android:layout_height="60dp"
                android:inputType="text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/add_model_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model:"
                android:textSize="30sp" />

            <Space
                android:layout_width="73dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/add_model_input"
                android:layout_width="225dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/add_rim_size_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rim size:"
                android:textSize="30sp" />

            <Space
                android:layout_width="45dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/add_rim_size_input"
                android:layout_width="225dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="number" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/add_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textSize="30sp" />

            <Space
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/add_price_input"
                android:layout_width="225dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="numberDecimal" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/add_add_new_button"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:text="Add new tyre" />
        </TableRow>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>