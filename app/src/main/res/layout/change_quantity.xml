<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:paddingVertical="40dp">

            <TextView
                android:id="@+id/text_product_id_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product ID:"
                android:textSize="30sp" />

            <Space
                android:layout_width="17dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/change_quantity_id_input"
                android:layout_width="225dp"
                android:layout_height="60dp"
                android:inputType="number" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/quantity_change_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change:"
                android:textSize="30sp" />

            <Space
                android:layout_width="57dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/change_quantity_change_input"
                android:layout_width="225dp"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="numberSigned" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/change_quantity_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change quantity" />
        </TableRow>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>